<body>

 <h1>Editing book</h1>
 <%= form_with model:@book, url:"/books/#{@book.id}", local:true do |f| %>

   <% if @book.errors.any? %>
   <div class="error_explanation">
    <h2 class><%= @book.errors.count %>error prohibited this book from being saved:</h2>
    <ul>
      <li>
      <% @book.errors.full_messages.each do |message| %>
        <%= message %>
      <% end %>
      </li>
    </ul>
   <% end %>
   </div>

   <div class="field">
     <div>Title</div>
     <%= f.text_field :title %>
   </div>
   <div class="field">
     <div>Body</div>
     <%= f.text_field :body %>
   </div>
   <div class="actions">
   <%= f.submit ' Update Book ' %>
   </div>
   <%= link_to "Show", book_path(@book) %> | <%= link_to "Back", '/books' %>
 <% end %>

</body>