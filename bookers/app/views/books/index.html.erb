<body>

  <p id="notice"></p>
  <h1>Books</h1>
  <table>
    <thead>
      <tr>
        <th>Title</th>
        <th>Body</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody class="table">
      <% @books.each do |book| %>
      <tr>
        <td><%= book.title %></td>
        <td><%= book.body %></td>
        <td><%= link_to "Show", book_path(book.id) %></td>
        <td><%= link_to "Edit", edit_book_path(book.id) %></td>
        <td><%= link_to "Destroy", book_path(book.id), method: :delete, "data-confirm" => "Are you sureï¼Ÿ" %></td>
      </tr>
      <% end %>

    </tbody>
  </table>

  <div class="new_book">
  <h2>New book</h2>
  <%= form_with model:@book, url:books_path, local:true do |f| %>

   <% if @book.errors.any? %>
   <div class="error_explanation">
    <h2 class><%= @book.errors.count %>error prohibited this book from being saved:</h2>
    <ul>
      <li>
      <% @book.errors.full_messages.each do |message| %>
        <%= message %>
      <% end %>
      </li>
    </ul>
   </div>
   <% end %>


   <div class="field">
    <div>Title</div>
    <%= f.text_field :title %>
   </div>
   <div class="field">
    <div>Body</div>
    <%= f.text_field :body %>
   </div>
   <div class="actions">
     <%= f.submit ' Create Book ' %>
   </div>

  <% end %>
  </div>


</body>