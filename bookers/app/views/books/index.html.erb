<body>
  <p id="notice"></p>
  <h1>Books</h1>
  <table>
    <thead>
      <tr>Title</tr>
      <tr>Body</tr>
      <th colspan="3"></th>
    </thead>
    <tbody class="table">
      <tr>
        <% @books.each do |book| %>
        <td><%= book.title %></td>
        <td><%= book.body %></td>
        <td>show<%#= link_to "Edit", editbook_path(@book:id) %></td>
        <td>edit<%#= link_to "Edit", editbook_path(@book:id) %></td>
        <td>destroy<%#= link_to "Destroy", destroy_book_path(@book.id), method: :delete, "data-confirm" => "本当に削除しますか？" %></td>
        <% end %>
      </tr>

    </tbody>
  </table>

  <h1>New book</h1>
  <%= form_with model: @book, url:'/books', local:true do |f| %>
    <h4>Title</h4>
    <%= f.text_field :title %>
    <h4>Body</h4>
    <%= f.text_field :body %>
    <%= f.submit 'Create Book' %>
  <% end %>



  </body